<%- include('partials/header') -%>

<div class="addNewContainer">
    <h2 style="margin-bottom: 50px;">Add new employee details</h2>
    <form action="/addNewEmployee" method="POST">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" style="width: 400px;" name="employeeName" autocomplete="off">
    </div>
    <div class="form-group">
        <label>Address</label>
        <input class="form-control" style="width: 400px;" name="employeeAddress" autocomplete="off">
    </div>
    <div class="form-group">
        <label>Phone number</label>
        <input class="form-control" style="width: 400px;" name="employeePhone" autocomplete="off">
    </div>
    <button type="submit" class="btn btn-dark" style="background-color: purple;">Save</button>
    </form>
</div>

  

<%- include('partials/footer') -%>